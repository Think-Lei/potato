<!--pages/tianjia/tianjia.wxml-->
<image class="head"src="image/pku.jpg"></image>
<view class="section__title1">请选择主题：</view>

<!-- Form表单，需要绑定一个submit事件，在小程序中，属性为bindsubmit,
bindsubmit=”formSubmit”这里的属性值formSubmit，命名可以为符合规范的任意值 -->
<form class="page__bd" bindsubmit="formSubmit">  
<view class="section">
  <view class="section__title">上午：</view>
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
    <view class="picker">
      当前选择：{{array[index]}}
    </view>
  </picker>
</view>

<view class="section">
  <view class="section__title">下午：</view>
  <picker bindchange="bindPickerChange1" value="{{index1}}" range="{{array1}}">
    <view class="picker">
      当前选择：{{array1[index1]}}
    </view>
  </picker>
</view>


<view class="section">
  <view class="section__title">请选择日期：</view>
  <picker mode="date" value="{{date}}" start="2015-09-01" end="2025-09-01" bindchange="bindDateChange">
    <view class="picker">
      当前选择: {{date}}
    </view>
  </picker>
</view>
<view >
   <button class="btn-area" form-type="submit">发布</button>
</view>
</form>
